<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cg.fongwama.densipara">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Home"
            android:label="@string/title_activity_accueil" />
        <activity
            android:name=".activity.Nouveau"
            android:label="@string/title_activity_nouveau">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.Home" />
        </activity>
        <activity android:name=".activity.About"
            android:label="About">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.Home" />
        </activity>
    </application>

</manifest>